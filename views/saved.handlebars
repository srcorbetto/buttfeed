<div class="container">
	<div class="row">
	{{#each fromDB}}
			<div class="col-md-6">
				<div class="card mt-3 mb-3">
				  <div class="card-body">
				    <a href="{{this.link}}"><h3 class="title">{{this.title}}</h3></a>
				    <p class="summary">{{this.summary}}</p>
				    <a href="{{this.link}}"><img src="{{this.img}}" alt="" class="img"></a>
				    <i class="fa fa-close delete-article" aria-hidden="true" data-id="{{this._id}}"></i>
					    <form class="mt-3">
						  <div class="form-row align-items-center">
						    <div class="col">
						      <input type="text" class="form-control mb-2 note-input" placeholder="Add a note">
						    </div>
						    <div class="col">
						      <button data-id="{{this._id}}" type="submit" class="btn btn-primary mb-2 add-note">Add</button>
						    </div>
						  </div>
						</form>
				    {{#notes}}
				    <div class="alert alert-secondary" role="alert">{{this.copy}}<i class="fa fa-close" aria-hidden="true" data-id="{{this._id}}"></i></div>
				    {{/notes}}
				  </div>
				</div>
			</div>
	{{/each}}
	</div>
</div>
				    <button type="button" class="btn btn-primary add-note">Add Note</button>